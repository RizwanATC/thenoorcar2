<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.PrayerTime">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintSilver"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/silver_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_marginBottom="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="left"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/icon_menu_back"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_back">

                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/noorLogo"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:src="@drawable/the_noor_icon">

                        </ImageView>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout

                        android:layout_marginLeft="105dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Next Prayer "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="28dp" />
                        <TextView
                            android:includeFontPadding="false"
                            android:fontFamily="@font/avenirblack"
                            android:text="Waktu "
                            android:id="@+id/textView_which_prayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="28dp" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginLeft="105dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="testing"
                            android:id="@+id/textView_countdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/prev"
                                android:src="@drawable/left_arrow"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1">
                            </ImageView>
                            <LinearLayout
                                android:layout_weight="2.8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_prayer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                </androidx.recyclerview.widget.RecyclerView>



                            </LinearLayout>

                            <ImageView
                                android:id="@+id/next"
                                android:src="@drawable/righ_arrow"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1">
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_location">
                            </ImageView>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/textView_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="@color/white"
                                android:textSize="24dp">
                            </TextView>
                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>






            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
