<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Asma">

    <!-- TODO: Update blank fragment layout -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/bg_main">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/constraintSilver"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="40dp"
          android:layout_marginTop="40dp"
          android:layout_marginEnd="40dp"
          android:background="@drawable/silver_bg"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">
          <LinearLayout
              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <LinearLayout
                      android:gravity="left"
                      android:layout_gravity="right"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent">
                      <ImageView
                          android:id="@+id/backBtn"
                          android:layout_width="50dp"
                          android:layout_height="50dp"
                          android:src="@drawable/icon_back">

                      </ImageView>
                  </LinearLayout>
                  <LinearLayout
                      android:gravity="right"
                      android:layout_gravity="right"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent">
                      <ImageView
                          android:id="@+id/noorLogo"
                          android:layout_width="150dp"
                          android:layout_height="50dp"
                          android:src="@drawable/the_noor_icon">

                      </ImageView>
                  </LinearLayout>


              </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="-50dp"
                  android:gravity="center_vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
                  <LinearLayout
                      android:layout_marginTop="20dp"
                      android:layout_width="match_parent"
                      android:layout_height="300dp">
                      <LinearLayout

                          android:layout_marginRight="20dp"
                          android:layout_marginLeft="75dp"
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                          <RelativeLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">

                              <ImageView
                                  android:id="@+id/imageView"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:src="@drawable/asma_icon_0" />

                          </RelativeLayout>




                      </LinearLayout>
                      <LinearLayout
                          android:layout_weight="1"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="120dp"
                              android:orientation="horizontal">
                              <LinearLayout
                                  android:layout_marginTop="8dp"
                                  android:background="@drawable/bg_no"
                                  android:layout_width="38dp"
                                  android:layout_height="38dp">
                                  <TextView
                                      android:id="@+id/txt_number"
                                      android:textColor="#FFFFFF"
                                      android:gravity="center"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:text="1"
                                      android:textSize="18dp">

                                  </TextView>

                              </LinearLayout>
                              <LinearLayout
                                  android:gravity="right"
                                  android:layout_marginLeft="10dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical">

                                  <TextView
                                      android:includeFontPadding="false"
                                      android:id="@+id/textView_text"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:fontFamily="@font/avenirblack"
                                      android:gravity="left|top"
                                      android:text="Ar-Rahman"
                                      android:textColor="#FFFFFF"
                                      android:textSize="38dp" />
                                  <TextView
                                      android:includeFontPadding="false"
                                      android:text="The Most Gracious"
                                      android:id="@+id/textView_meaning"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:fontFamily="@font/avenirroman"
                                      android:gravity="left"
                                      android:textColor="@android:color/white"
                                      android:textSize="28dp" />
                              </LinearLayout>


                          </LinearLayout>

                          <LinearLayout

                              android:layout_marginTop="10dp"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent">
                              <de.hdodenhof.circleimageview.CircleImageView
                                  android:id="@+id/profile_image"
                                  android:layout_width="80dp"
                                  android:layout_height="80dp"
                                  app:civ_border_color="#FFFFFF"
                                  app:civ_border_width="3dp"
                                  android:src="@drawable/icon_ishmael"
                                  android:layout_gravity="center_vertical|bottom"/>
                              <ImageView
                                  android:layout_marginBottom="20dp"
                                  android:layout_marginLeft="5dp"
                                  android:layout_gravity="center_vertical|bottom"
                                  android:layout_width="38dp"
                                  android:layout_height="38dp"
                                  android:src="@drawable/arrow_down">

                              </ImageView>
                              <ImageView

                                  android:layout_marginLeft="10dp"
                                  android:layout_marginRight="85dp"
                                  android:layout_gravity="center_vertical|bottom"
                                  android:id="@+id/imageView_play"
                                  android:layout_width="match_parent"
                                  android:layout_height="80dp"
                                  android:src="@drawable/play_asma_icon" />

                          </LinearLayout>


                      </LinearLayout>
                  </LinearLayout>
                  <LinearLayout

                      android:layout_marginRight="70dp"
                      android:layout_marginLeft="70dp"
                      android:layout_marginTop="50dp"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <SeekBar
                          android:progress="1"
                          android:id="@+id/seekBar"
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:progressBackgroundTint="#FFFFFF"
                          android:thumb="@drawable/custom_seekbar" />
                  </LinearLayout>
                  <LinearLayout
                      android:visibility="gone"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content">

                      <androidx.recyclerview.widget.RecyclerView
                          android:visibility="invisible"
                          android:id="@+id/rv"
                          android:layout_width="match_parent"
                          android:layout_height="10dp"
                          android:clipToPadding="false" />

                  </LinearLayout>

              </LinearLayout>
          </LinearLayout>


      </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>