<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">

        <LinearLayout

            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/avenirblack"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tetapan"
                    android:textSize="32dp">

                </TextView>

            </LinearLayout>
            <ScrollView
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/linear_language"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/avenirblack"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Bahasa Aplikasi"
                                android:textSize="32dp">

                            </TextView>
                            <TextView
                                android:id="@+id/seleected_bahasa"
                                android:fontFamily="@font/avenir"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bahasa Malaysia"
                                android:textSize="28dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout

                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/back_btn">

                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/select_bahasa_linear"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/linier_bahasa_satu"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bahasa Malaysia"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/image_check_satu"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/icon_tick_right_white">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linier_bahasa_dua"
                                android:layout_marginTop="10dp"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="English"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/image_check_dua"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/icon_tick_right_white">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_azan"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/avenirblack"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Notifikasi Audio Azan"
                                android:textSize="32dp">

                            </TextView>
                            <TextView
                                android:id="@+id/selected_azan"
                                android:fontFamily="@font/avenir"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Akbar Azmi"
                                android:textSize="28dp">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout

                            android:gravity="center_vertical|right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView

                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/back_btn">

                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/select_azan_reciter"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/linear_azan_1"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/icon_azan_11"
                                    app:civ_border_color="#74709d"
                                    app:civ_border_width="2dp" />
                                <TextView
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Akbar Azmi"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/play_icon1"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/play_iconv2">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_azan_2"
                                android:layout_marginTop="10dp"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/icon_azan_22"
                                    app:civ_border_color="#74709d"
                                    app:civ_border_width="2dp" />
                                <TextView
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sheikh Idris Sulaiman"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/play_icon2"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/play_iconv2">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_azan_3"
                                android:layout_marginTop="10dp"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/icon_azan_33"
                                    app:civ_border_color="#74709d"
                                    app:civ_border_width="2dp" />
                                <TextView
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yassin Sulaiman"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/play_icon3"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/play_iconv2">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_azan_4"
                                android:layout_marginTop="10dp"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/image_tk"
                                    app:civ_border_color="#74709d"
                                    app:civ_border_width="2dp" />
                                <TextView
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Teuku Wisnu"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/play_icon4"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/play_iconv2">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/linear_azan_5"
                                android:layout_marginTop="10dp"
                                android:padding="20dp"
                                android:background="@drawable/custom_choose_noti_selection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/icon_ridjad"
                                    app:civ_border_color="#74709d"
                                    app:civ_border_width="2dp" />
                                <TextView
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/avenir"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ridjaal Ahmed"
                                    android:textSize="28dp">
                                </TextView>
                                <LinearLayout
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/play_icon5"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/play_iconv2">
                                    </ImageView>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>


            </ScrollView>




        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>